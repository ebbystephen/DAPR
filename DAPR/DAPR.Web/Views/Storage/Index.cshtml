@model List<string>
@{
    // We are using BindingName instead of AuthMode for display
    ViewData["Title"] = "Dapr Storage Manager";
    string bindingName = ViewBag.BindingName ?? "UNKNOWN";
    string badgeColor = "info"; // Simple badge color for the binding name
}

<div class="container py-5">
    <div class="card shadow-sm rounded-4 p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0 text-primary">Dapr Storage File Manager</h2>
            <span class="badge bg-@badgeColor fs-6 px-3 py-2">
                Binding: @bindingName
            </span>
        </div>

        <form asp-controller="Storage" asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-4">
            <div class="input-group">
                <input type="file" name="file" class="form-control" required />
                <button type="submit" class="btn btn-success">Upload</button>
            </div>
        </form>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>File Name</th>
                        <th style="width:180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blob in Model)
                    {
                        <tr>
                            <td>@blob</td>
                            <td>
                                <a asp-controller="Storage" asp-action="Download" asp-route-fileName="@blob" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-download"></i> Download
                                </a>
                                <form asp-controller="Storage" asp-action="Delete" method="post" style="display:inline;"
                                      onsubmit="return confirm('Delete @blob?');">
                                    <input type="hidden" name="fileName" value="@blob" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">No files found in this container via Dapr binding **@bindingName**.</div>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />